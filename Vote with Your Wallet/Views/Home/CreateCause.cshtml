@{
    ViewData["Title"] = "Create Causes";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/create_cause.css">
</head>
<body>
    <div id="form_box">
        <div class="text-center">
            <h1>Create Causes</h1>
            <hr />
        </div>
        <form method="post">
            <div class="mb-3">
                <label for="Cause">Cause</label>
                <input id="Cause" class="form-control" />
            </div>
            <div class="mb-3">
                <label for="cause_description">Description</label>
                <div class="input-group">
                    <textarea id="cause_description"
                              class="form-control"
                              aria-label="Cause Description"></textarea>
                </div>
            </div>
            <button id="crt-btn" type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>


    <script src="~/js/create_cause.js"></script>
</body>
</html>
