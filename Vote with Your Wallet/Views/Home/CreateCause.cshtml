@model Vote_with_Your_Wallet.Models.Cause
@{
    ViewData["Title"] = "Create Causes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-group textarea {
        width: 100%;
    }
</style>


@using (Html.BeginForm("Create", "Causes", FormMethod.Post))
{
    // Include anti-forgery token to prevent CSRF attacks
    @Html.AntiForgeryToken()

    <div id="form_box">
        <div class="text-center">
            <h1>Create Causes</h1>
            <hr />
                <!-- Display validation summary -->
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
             <!-- Input field for CauseName -->
            <div class="form-group">
                @Html.LabelFor(model => model.CauseName, new { @class = "control-label" })
                @Html.EditorFor(model => model.CauseName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CauseName, "", new { @class = "text-danger" })
            </div>
                <!-- Input field for Description -->
            <div class="form-group">
                <div class="input-group">
                @Html.LabelFor(model => model.Description, new { @class = "control-label" })
                @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br>
        <!-- Create button to submit the form -->
            <button id="crt-btn" type="submit" class="btn btn-primary">Create</button>
    </div>
}
